<p id="notice"><%= notice %></p>

<% if @article.photo.attached? %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @article.photo.key, class: "article-img" %>);">
  <div class="container">
    <h1><%= @article.title %></h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>
<% else %>
  <h1><%= @article.title %></h1>
<% end %>

<%= @article.body %>




<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', root_path %>
